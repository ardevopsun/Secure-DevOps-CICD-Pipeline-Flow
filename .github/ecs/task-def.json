{
  "family": "frontend-backend-task",
  "networkMode": "bridge",
  "containerDefinitions": [
    {
      "name": "frontend",
      "image": "ardevopsun/frontend:latest",
      "memory": 128,
      "cpu": 0,
      "essential": true,
      "portMappings": [
        { "containerPort": 80, "hostPort": 80 }
      ]
    },
    {
      "name": "backend",
      "image": "ardevopsun/backend:latest",
      "memory": 128,
      "cpu": 0,
      "essential": true,
      "portMappings": [
        { "containerPort": 3000, "hostPort": 3000 }
      ]
    }
  ],
  "requiresCompatibilities": ["EC2"],
  "cpu": "256",
  "memory": "512"
}
