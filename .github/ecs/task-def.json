{
  "family": "frontend-backend-task",
  "containerDefinitions": [
    {
      "name": "frontend",
      "image": "ardevopsun/frontend:latest",
      "portMappings": [
        { "containerPort": 80, "hostPort": 80 }
      ],
      "essential": true
    },
    {
      "name": "backend",
      "image": "ardevopsun/backend:latest",
      "portMappings": [
        { "containerPort": 3000, "hostPort": 3000 }
      ],
      "essential": true
    }
  ],
  "requiresCompatibilities": ["EC2"],
  "cpu": "256",
  "memory": "512",
  "networkMode": "bridge"
}
